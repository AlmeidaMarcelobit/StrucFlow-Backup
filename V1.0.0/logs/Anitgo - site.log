<?php
// Função para registrar logs
function registrarLog($mensagem) {
    // Caminho do arquivo de log
    $arquivoLog = __DIR__ . '/logs/site.log';

    // Adiciona a data e hora à mensagem
    $dataHora = date('Y-m-d H:i:s');
    $mensagemCompleta = "[$dataHora] $mensagem\n";

    // Grava no arquivo (adicionando ao final)
    file_put_contents($arquivoLog, $mensagemCompleta, FILE_APPEND | LOCK_EX);
}

// Exemplo de uso
registrarLog("Usuário acessou a página inicial.");
registrarLog("Erro 404: Página não encontrada.");
?>
